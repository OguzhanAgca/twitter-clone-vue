{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "/@/*": ["./src/*", "./dist/*"],
      "/#/": ["./types/*"]
    },
    "types": ["vite-plugin-vue-layouts/client", "vite-plugin-pages/client"]
  },
  "include": ["src/**/*.vue", "types/**/*.d.ts", "components.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
